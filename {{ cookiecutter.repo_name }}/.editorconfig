root = true


[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.R]
indent_size = 2

[*.{md,markdown,Rmd}]
indent_size = 1
trim_trailing_whitespace = true

[*.{yml,yaml,json,talismanrc,toml}]
indent_size = 2

[*.rst]
indent_style = space
indent_size = 3

[*.bat]
end_of_line = crlf
indent_style = tab

[Makefile]
indent_style = tab
